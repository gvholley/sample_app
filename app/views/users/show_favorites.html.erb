<% provide(:title, @user.name) %>
<div class="row">
  <aside class="col-md-4">
    <section class="user_info">
      <% if @user.avatar.attached? %>
    <%= image_tag @user.avatar.variant(resize_to_limit: [80, 80]) %>
    <% else %>
    <%= link_to gravatar_for(@user, size: 50), @user %>
  <% end %>
      <h1 class="profilename"><%= link_to @user.name, @user %></h1>
      <span><%= @user.microposts.count %> <b>Kakaws</b></span>
    </section>
    <section class="stats">
      <%= render 'shared/stats' %>
      </section>
  </aside>
  <div class="col-md-8">
    <h3><%= @title %></h3>
    <% if @favorites.any? %>
      <ol class="microposts">
         <%= render @favorites %>
      </ol>
    <% end %>
  </div>
</div>

