<% provide(:title, @title) %>
<div class="row">
  <aside class="col-md-4">
    <section class="user_info">
      <% if @user.avatar.attached? %>
    <%= image_tag @user.avatar.variant(resize_to_limit: [80, 80]) %>
    <% else %>
    <%= link_to gravatar_for(@user, size: 50), @user %>
  <% end %>
      <h1 class="profilename"><%= link_to @user.name, @user %></h1>
      <span><%= @user.microposts.count %> <b>Kakaws</b></span>
    </section>
    <section class="stats">
      <%= render 'shared/stats' %>
    </section>
  </aside>
  <div class="col-md-8">
    <h3><%= @title %></h3>
    <% if @users.any? %>
      <ol class="users follow">
        <%= render @users %>
      </ol>
      <div class="digg_pagination">
  <div class="page_info">
<%= will_paginate @feed_items, :previous_label => '<',:next_label => '>' %>
</div>
</div>
    <% end %>
  </div>
</div>
